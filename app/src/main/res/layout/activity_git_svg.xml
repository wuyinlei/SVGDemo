<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_git_svg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ruolan.com.svgdemo.GitSvgActivity">

    <TextView
    android:textSize="40dp"
    android:textColor="@color/colorPrimary"
    android:text="{ion-social-usd-outline}"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/image"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:ico_color="@color/colorPrimaryDark"
        app:ico_icon="ion_android_color_palette"
        app:ico_size="48dp" />

    <TextView
        android:text="{ion_android_color_palette} Chart"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textSize="16sp"/>
</LinearLayout>
